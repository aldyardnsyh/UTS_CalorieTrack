<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputActivity"
    android:orientation="vertical"
    android:padding="16dp">

    <Spinner
        android:id="@+id/jenisInputSpinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:background="@drawable/et_border_radius"
        android:hint="Pilih"
        android:layout_marginBottom="20dp"></Spinner>

    <!-- Input Form for Kalori In -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kalori In"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/namaMakananField"
        android:layout_width="match_parent"
        android:hint="Nama Makanan"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:background="@drawable/et_border_radius"/>


    <EditText
        android:id="@+id/jumlahKaloriField"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:hint="Jumlah Kalori"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:background="@drawable/et_border_radius"
        />

    <!-- Input Form for Kalori Out -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kalori Out"
        android:textSize="24sp"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/namaWorkoutField"
        android:layout_width="match_parent"
        android:hint="Nama Workout"
        android:layout_marginTop="10dp"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:background="@drawable/et_border_radius"/>


    <EditText
        android:id="@+id/durasiWorkoutField"
        android:layout_width="match_parent"
        android:hint="Durasi Workout (menit)"
        android:layout_marginTop="10dp"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:background="@drawable/et_border_radius"/>

    <EditText
        android:id="@+id/kaloriTerbakarField"
        android:layout_width="match_parent"
        android:hint="Kalori Terbakar"
        android:layout_marginTop="10dp"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:background="@drawable/et_border_radius"
        />

    <!-- Save Button -->
    <Button
        android:id="@+id/btnSave"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Simpan"
        android:textSize="18sp"
        android:textStyle="bold"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"
        android:layout_gravity="center"
        android:layout_marginTop="16dp" />



</LinearLayout>